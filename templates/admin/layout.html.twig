{# 简化的EasyAdmin兼容布局 - 提供后备样式 #}
<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}RAGFlow 管理{% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    {# Bootstrap CSS用作后备 #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    {# Font Awesome #}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        .content-header { margin-bottom: 1.5rem; border-bottom: 1px solid #dee2e6; padding-bottom: 1rem; }
        .content-header .title { margin: 0; color: #495057; }
        .page-actions { margin-top: 0.5rem; }
    </style>
</head>
<body class="bg-light">
    <div class="container-fluid py-4">
        <div class="content-header d-flex justify-content-between align-items-center">
            <h1 class="title">{% block content_title %}{{ block('title') }}{% endblock %}</h1>
            <div class="page-actions">
                {% block page_actions %}{% endblock %}
            </div>
        </div>
        
        <div class="content-body">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            
            {% block main %}{% endblock %}
        </div>
    </div>
    
    {# Bootstrap脚本 #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>